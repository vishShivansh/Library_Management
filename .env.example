# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=library_db
DB_USER=root
DB_PASSWORD=

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Razorpay Configuration (Get from Razorpay Dashboard)
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret
RAZORPAY_WEBHOOK_SECRET=your-razorpay-webhook-secret

# Firebase Cloud Messaging (Optional - for push notifications)
FCM_SERVER_KEY=your-fcm-server-key
FCM_SENDER_ID=your-fcm-sender-id
FCM_SERVICE_ACCOUNT_PATH=./path/to/service-account-key.json

# QR Token Configuration
QR_HMAC_SECRET=your-qr-hmac-secret-key-change-this
QR_TOKEN_TTL=30

# Library GPS Coordinates (Optional - for attendance geofencing)
LIBRARY_LAT=28.7041
LIBRARY_LON=77.1025

# Application URLs
FRONTEND_URL=http://localhost:8080
WEBHOOK_URL=http://localhost:3000/api/payments/webhook

# Admin Setup (Optional - for initial admin user creation)
ADMIN_DEFAULT_PASSWORD=admin123
